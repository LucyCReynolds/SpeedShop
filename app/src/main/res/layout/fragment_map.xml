<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MapActivityFragment">



    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/grocerystorelayout"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/close" />



    <ImageButton android:id="@+id/close"
        android:src="@drawable/ic_reorder_black_18dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView"
        android:textSize="40dp"
        android:textColor="@color/blue"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/MilkImage"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:tint= "@color/yellow"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/ApplesImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:tint= "@color/green"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/BreadImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/imageView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="88dp"
        android:tint= "@color/red"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/EggsImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/MilkImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="88dp"
        android:tint= "@color/yellow"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/TurkeyImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_below="@+id/ApplesImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="29dp"
        android:tint= "@color/red"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/ToothpasteImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_above="@+id/MilkImage"
        android:layout_toEndOf="@+id/ApplesImage"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:tint= "@color/blue"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_star_12pt"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/LettuceImage"
        android:scaleX="2"
        android:scaleY="2"
        android:scaleType="fitXY"
        android:layout_above="@+id/ToothpasteImage"
        android:layout_toStartOf="@+id/ToothpasteImage"
        android:layout_marginBottom="24dp"
        android:tint= "@color/green"/>



</RelativeLayout>
